---
layout: default
permalink: "/news/{{ page.date | date: '%Y/%m/%d' }}/{{ page.fileSlug }}/"
---
{%- assign author = authors[author] -%}
<main class='flex-shrink-0'>
  <div class='container'>
    <article itemscope itemtype='http://schema.org/Article'>
      <h1 class='post-title mt-5 mb-4' itemprop='headline'>
        {{- title -}}
      </h1>
      <span class='post-category'>
        <span class='label'>
          {{- category -}}
        </span>
      </span>
      <div class='post-meta'>
        <span
          class='post-date'
          itemprop='datePublished'
          content='{{ page.date | date: "%Y-%m-%d" }}'
        >
          {{- page.date | date_to_string -}}
        </span>
        <a
          href='{{ author.url }}'
          class='post-author'
          itemprop='author'
          itemscope
          itemtype='http://schema.org/Person'
        >
          <img
            class='avatar avatar-small'
            src='{{ author.avatar }}'
            alt='{{ author.alias }}'
            width='24'
            height='24'

          ><span class='author-name' itemprop='name'>{{ author.name }}</span>
        </a>
      </div>
      <div class='post-content' itemprop='articleBody'>
        {{ content }}
      </div>
    </article>
  </div>
</main>
